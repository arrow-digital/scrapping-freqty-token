{
  "compilerOptions": {
    "target": "ES2017",
    "module": "CommonJS",
    "lib": ["esnext", "dom"],
    "rootDir": ".",
    "outDir": "./dist",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] },
    "allowJs": true,
    "sourceMap": true,
    // "declarationMap": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true
  },
  // "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
